@model IEnumerable<DawnShoesV2.Models.ClasificacionZapatoViewModel>

@{
    ViewBag.Title = "PagListaClasificacionZapatoAdm";
}

<h2>PagListaClasificacionZapatoAdm</h2>

<p>
    @Html.ActionLink("Agregar clasificacion", "PagCreacionClasificacionZapatoAdm")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PesoEstimadoG)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PesoEstimadoG)
                </td>
                <td>
                    @Html.ActionLink("Editar", "PagEditarClasificacionZapatoAdm", new { id = item.ClasificacionZapatoDMId }) |
                    @Html.ActionLink("Borrar", "BorrarClasificacionZapato", new { id = item.ClasificacionZapatoDMId })
                </td>
            </tr>
        }
    } else {
        <tr>
            <td>
                <h2>No hay datos disponibles</h2>
            </td>
        </tr>
    }
</table>
